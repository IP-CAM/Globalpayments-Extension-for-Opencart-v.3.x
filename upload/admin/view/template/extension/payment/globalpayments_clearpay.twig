<div class="tab-pane{% if active_tab == 'clearpay' %} active{% endif %}" id="tab-clearpay">
    <div class="form-group">
        <label class="col-sm-2 control-label" for="input-clearpay_enabled">{{ label_enabled }}</label>
        <div class="col-sm-10 checkbox">
            <label>
                <input id="input-clearpay_enabled" type="checkbox" name="payment_globalpayments_clearpay_enabled"
                       value="{{ payment_globalpayments_clearpay_enabled }}"{% if (payment_globalpayments_clearpay_enabled==1) %} checked{% endif %} /> {{ entry_enabled }}
            </label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="input-clearpay_title"><span data-toggle="tooltip" title="{{ help_title }}">{{ label_title }}</span></label>
        <div class="col-sm-10">
            <input id="input-clearpay_title" type="text" name="payment_globalpayments_clearpay_title"
                   value="{{ payment_globalpayments_clearpay_title }}" placeholder="{{ placeholder_clearpay_title }}" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="input-clearpay_payment_action">
            <span data-toggle="tooltip" title="{{ help_payment_action }}">{{ label_payment_action }}</span>
        </label>
        <div class="col-sm-10">
            <select name="payment_globalpayments_clearpay_payment_action" id="input-clearpay_payment_action" class="form-control">
                <option value="charge" {{ payment_globalpayments_clearpay_payment_action == 'charge' ? 'selected' : '' }}>{{ entry_payment_action_charge }}</option>
                <option value="authorize" {{ payment_globalpayments_clearpay_payment_action == 'authorize' ? 'selected' : '' }}>{{ entry_payment_action_authorize }}</option>
            </select>
        </div>
    </div>
</div>
<script type="text/javascript">
	$('#input-clearpay_enabled').on('change', this.toggleCheckboxValue.bind(this));
</script>
