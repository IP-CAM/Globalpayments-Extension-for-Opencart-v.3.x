<div class="tab-pane{% if active_tab == 'googlepay' %} active{% endif %}" id="tab-googlepay">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-googlepay_enabled">{{ label_enabled }}</label>
    <div class="col-sm-10 checkbox">
      <label>
        <input id="input-googlepay_enabled" type="checkbox" name="payment_globalpayments_googlepay_enabled"
               value="{{ payment_globalpayments_googlepay_enabled }}"{% if (payment_globalpayments_googlepay_enabled==1) %} checked{% endif %} /> {{ entry_enabled }}
      </label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-googlepay_title"><span data-toggle="tooltip" title="{{ help_title }}">{{ label_title }}</span></label>
    <div class="col-sm-10">
      <input id="input-googlepay_title" type="text" name="payment_globalpayments_googlepay_title"
             value="{{ payment_globalpayments_googlepay_title }}" placeholder="{{ placeholder_googlepay_title }}" class="form-control"/>
    </div>
  </div>
  <div class="form-group required">
    <label class="col-sm-2 control-label" for="input-gp_merchant_id">{{ label_gp_merchant_id }}</label>
    <div class="col-sm-10">
      <input id="input-gp_merchant_id" type="text" name="payment_globalpayments_googlepay_gp_merchant_id" value="{{ payment_globalpayments_googlepay_gp_merchant_id }}" class="form-control"/><br/>
      <p>{{ help_gp_merchant_id }}</p>
      {% if error_gp_merchant_id %}
        <div class="text-danger">{{ error_gp_merchant_id }}</div>
      {% endif %}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-merchant_id">{{ label_merchant_id }}</label>
    <div class="col-sm-10">
      <input id="input-merchant_id" type="text" name="payment_globalpayments_googlepay_merchant_id" value="{{ payment_globalpayments_googlepay_merchant_id }}" class="form-control"/><br/>
      <p>{{ help_merchant_id }}</p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-merchant_name">{{ label_merchant_name }}</label>
    <div class="col-sm-10">
      <input id="input-merchant_name" type="text" name="payment_globalpayments_googlepay_merchant_name" value="{{ payment_globalpayments_googlepay_merchant_name }}" class="form-control"/><br/>
      <p>{{ help_merchant_name }}</p>
    </div>
  </div>
  <div class="form-group required">
    <label class="col-sm-2 control-label" for="input-googlepay_accepted_cards">{{ label_accepted_cards }}</label>
    <div class="col-sm-10">
      <p><input id="input-googlepay_accepted_cards_visa" type="checkbox" name="payment_globalpayments_googlepay_accepted_cards[]"
                value="VISA"{% if 'VISA' in payment_globalpayments_googlepay_accepted_cards %} checked{% endif %} /> {{ entry_card_type_visa }}</p>
      <p><input id="input-googlepay_accepted_cards_mastercard" type="checkbox" name="payment_globalpayments_googlepay_accepted_cards[]"
                value="MASTERCARD"{% if 'MASTERCARD' in payment_globalpayments_googlepay_accepted_cards %} checked{% endif %} /> {{ entry_card_type_mastercard }}</p>
      <p><input id="input-googlepay_accepted_cards_amex" type="checkbox" name="payment_globalpayments_googlepay_accepted_cards[]"
                value="AMEX"{% if 'AMEX' in payment_globalpayments_googlepay_accepted_cards %} checked{% endif %} /> {{ entry_card_type_amex }}</p>
      <p><input id="input-googlepay_accepted_cards_discover" type="checkbox" name="payment_globalpayments_googlepay_accepted_cards[]"
                value="DISCOVER"{% if 'DISCOVER' in payment_globalpayments_googlepay_accepted_cards %} checked{% endif %} /> {{ entry_card_type_discover }}</p>
      <p><input id="input-googlepay_accepted_cards_jcb" type="checkbox" name="payment_globalpayments_googlepay_accepted_cards[]"
                value="JCB"{% if 'JCB' in payment_globalpayments_googlepay_accepted_cards %} checked{% endif %} /> {{ entry_card_type_jcb }}</p>
      {% if error_googlepay_accepted_cards %}
        <div class="text-danger">{{ error_googlepay_accepted_cards }}</div>
      {% endif %}
    </div>
  </div>
  <div class="form-group required">
    <label class="col-sm-2 control-label" for="input-googlepay_allowed_card_auth_methods">{{ label_allowed_card_auth_methods }}
      <span data-toggle="tooltip" title="{{ label_allowed_card_auth_methods_tooltip }}"></span>
    </label>
    <div class="col-sm-10">
      <p><input id="input-googlepay_allowed_card_auth_methods_pan_only" type="checkbox" name="payment_globalpayments_googlepay_allowed_card_auth_methods[]"
                value="PAN_ONLY"{% if 'PAN_ONLY' in payment_globalpayments_googlepay_allowed_card_auth_methods %} checked{% endif %} /> {{ entry_method_pan_only }}</p>
      <p><input id="input-googlepay_allowed_card_auth_methods_cryptogram_3ds" type="checkbox" name="payment_globalpayments_googlepay_allowed_card_auth_methods[]"
                value="CRYPTOGRAM_3DS"{% if 'CRYPTOGRAM_3DS' in payment_globalpayments_googlepay_allowed_card_auth_methods %} checked{% endif %} /> {{ entry_method_cryptogram_3ds }}</p>

      {% if error_googlepay_allowed_card_auth_methods %}
        <div class="text-danger">{{ error_googlepay_allowed_card_auth_methods }}</div>
      {% endif %}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-googlepay_button_color">{{ label_googlepay_button_color }}</label>
    <div class="col-sm-10">
      <select name="payment_globalpayments_googlepay_button_color" id="input-googlepay_button_color" class="form-control">
        <option value="white" {{ payment_globalpayments_googlepay_button_color == "white" ? 'selected' : '' }}>{{ entry_googlepay_button_color_white }}</option>
        <option value="black" {{ payment_globalpayments_googlepay_button_color == "black" ? 'selected' : '' }}>{{ entry_googlepay_button_color_black }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-googlepay_payment_action">
      <span data-toggle="tooltip" title="{{ help_payment_action }}">{{ label_payment_action }}</span>
    </label>
    <div class="col-sm-10">
      <select name="payment_globalpayments_googlepay_payment_action" id="input-googlepay_payment_action" class="form-control">
        <option value="charge" {{ payment_globalpayments_googlepay_payment_action == 'charge' ? 'selected' : '' }}>{{ entry_payment_action_charge }}</option>
        <option value="authorize" {{ payment_globalpayments_googlepay_payment_action == 'authorize' ? 'selected' : '' }}>{{ entry_payment_action_authorize }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-sort-order">{{ label_sort_order }}</label>
    <div class="col-sm-10">
      <input type="text" name="payment_globalpayments_googlepay_sort_order" value="{{ payment_globalpayments_googlepay_sort_order }}" placeholder="{{ label_sort_order }}" id="input-sort-order" class="form-control" />
    </div>
  </div>
</div>
<script type="text/javascript">
	$('#input-googlepay_enabled').on('change', this.toggleCheckboxValue.bind(this));
</script>
